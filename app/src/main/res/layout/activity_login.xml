<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Auth.LoginActivity"
    android:background="@color/background_def">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/logo"
        android:layout_centerHorizontal="true"
        android:id="@+id/logoImage"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
     />


    <TextView
        android:id="@+id/login_header_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Login"
        android:layout_below="@id/logoImage"
        android:textSize="18sp"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Continue with"
        android:layout_below="@id/login_header_text"
        android:id="@+id/login_info_text"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:textSize="15sp"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/login_email"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_below="@id/login_info_text"
        android:background="@drawable/curved_gradient_button_background"
        android:layout_marginTop="20dp"
        android:text="Email and Password"
        android:textSize="15sp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textColor="@color/white"
        android:textAllCaps="false"
        />
    <Button
        android:id="@+id/login_phone"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_below="@id/login_email"
        android:background="@drawable/curved_gradient_button_background"
        android:layout_marginTop="10dp"
        android:text="Mobile Number"
        android:textSize="15sp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textColor="@color/white"
        android:textAllCaps="false"
        />
    <RelativeLayout
        android:id="@+id/login_facebook_wrapper"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_below="@id/login_phone"
        android:layout_marginTop="10dp"
        android:background="@drawable/curved_gradient_button_background"
        >

        <com.facebook.login.widget.LoginButton
            android:id="@+id/login_facebook"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/transparent"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Institution Login"
        android:layout_below="@id/login_facebook_wrapper"
        android:id="@+id/login_info_text2"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:textSize="15sp"
        android:layout_marginTop="50dp"/>

    <Button
        android:id="@+id/login_institution"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_below="@id/login_info_text2"
        android:background="@drawable/curved_gradient_button_background"
        android:layout_marginTop="20dp"
        android:text="Institution Login"
        android:textSize="15sp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Other Option"
        android:layout_below="@id/login_institution"
        android:id="@+id/login_info_text3"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:textSize="15sp"
        android:layout_marginTop="30dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/login_volunteer"
        android:layout_below="@id/login_info_text3"
        android:layout_marginTop="20dp"
        android:text="Volunteer Registeration"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:background="@drawable/curved_gradient_button_background"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:textAllCaps="false"/>

</RelativeLayout>