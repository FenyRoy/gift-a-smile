<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:cardCornerRadius="10dp"
        >

        <RelativeLayout
            android:id="@+id/auth_relativelayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="#ffffff"
            android:layout_margin="5dp">

            <ImageButton
                android:id="@+id/auth_back_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/circular_background"
                android:src="@drawable/ic_arrow_back"
                android:padding="5dp"
                android:backgroundTint="@color/colorAccent"
                android:tint="@color/white"/>

            <TextView
                android:id="@+id/auth_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Phone Auth"
                android:textColor="@color/colorAccent"
                android:textSize="20sp"
                android:layout_marginTop="20dp"/>

            <EditText
                android:id="@+id/auth_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:background="@drawable/accent_stroke"
                android:hint="Mobile Number"
                android:padding="10dp"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="50dp"
                android:inputType="number"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_below="@id/auth_countrypicker"/>

            <com.hbb20.CountryCodePicker
                android:id="@+id/auth_countrypicker"
                android:layout_width="match_parent"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:background="@drawable/accent_stroke"
                android:layout_below="@id/auth_info"
                android:layout_marginTop="60dp">

            </com.hbb20.CountryCodePicker>

            <Button
                android:id="@+id/auth_go_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/curved_gradient_button_background"
                android:layout_centerHorizontal="true"
                android:backgroundTint="@color/colorAccent"
                android:text="Next"
                android:textSize="15sp"
                android:layout_below="@id/auth_number"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="30dp"
                />

        </RelativeLayout>


    </android.support.v7.widget.CardView>

</RelativeLayout>